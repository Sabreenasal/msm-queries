
   <h1>
      List of all actors
    </h1>

<hr>

<div>
  <div>
    <table border="1">
      <tr>
        <th>ID</th>
        <th>Image</th>
        <th>Dob</th>
        <th>Image url</th>
        <th>Created at</th>
        <th>Updated at</th>
        <th></th>
      </tr>

      <% @list_of_actors.each do |an_actor| %>
      <tr>
        <td>
          <%= an_actor.id %>
        </td>

        <td>
          <%= an_actor.name %>
        </td>

        <td>
          <%= an_actor.dob %>
        </td>

        <td>
          <%= an_actor.image %>
        </td>

        <td>
          <%= time_ago_in_words(an_actor.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_actor.updated_at) %> ago
        </td>

        <td>
          <a href="/actors/<%= an_actor.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
