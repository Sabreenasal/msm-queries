      </div>

      <div>
        <a href="/delete_actor/<%= @the_actor.id %>">
          Delete actor
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_actor.name %>
      </dd>

      <dt>
        Dob
      </dt>
      <dd>
        <%= @the_actor.dob %>
      </dd>

      <dt>
        Bio
