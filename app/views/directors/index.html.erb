<div>
  <div>
    <h1>
      List of all directors
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Dob
        </th>

        <th>
          Bio
        </th>

        <th>
          Image url
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_directors.each do |a_director| %>
      <tr>
        <td>
          <%= a_director.id %>
        </td>

        <td>
          <%= a_director.name %>
        </td>

        <td>
          <%= a_director.dob %>
        </td>

        <td>
          <%= a_director.bio %>
        </td>

        <td>
          <%= a_director.image %>
        </td>

        <td>
          <%= time_ago_in_words(a_director.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_director.updated_at) %> ago
        </td>

        <td>
          <a href="/directors/<%= a_director.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
